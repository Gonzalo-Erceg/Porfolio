---
import Github from "../components/icons/Github.astro"
import LinkeIn from "../components/icons/LinkeIn.astro"
import Proyectos from "./Proyectos.astro"
import {TAGS} from "./icons/Icons.js"
import { Image } from "astro:assets"
---

<main class="min-h-screen">
    <section id="presentación" class="py-36 container min-h-screen max-w-4xl relative mx-auto">

        <div class="flex items-end gap-10">
            <Image src="/img/sprite.webp" alt="sprite" width={100} height={100} style="image-rendering: pixelated" />   
            <h1 class="text-6xl font-semibold" >Gonzalo Erceg</h1>
            <span class="bg-slate-800 py-2 px-3 border border-green-600 rounded-xl">Disponible para trabajar</span>
        </div>
       
        <p class="text-xl mt-4">Desarrollador <span class="text-yellow-200 underline">web Full Stack</span> de Buenos Aires, Argentina. Especializado en crear Aplicaciones web únicas y entusiasta de proyectos open-source.</p>
        <div class="mt-5">
            <a class="bg-slate-800 box py-2 px-3 rounded-full inline-flex border transition-all hover:border-blue-600 " href="https://github.com/Gonzalo-Erceg"><Github/><span class="ml-2">Github</span> </a>
            <a class="bg-slate-800 box py-2 px-3 rounded-full inline-flex border transition-all hover:border-blue-600" href="https://github.com/Gonzalo-Erceg"><LinkeIn/><span class="ml-2">LinkedIn</span> </a>
        </div>
        <div class="mx-auto absolute bottom-10 left-0 right-0 animate-bounce w-fit bg-slate-950 rounded-full border" >
            <svg  xmlns="http://www.w3.org/2000/svg"  width=" 45"  height="45"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-down"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 9l6 6l6 -6" /></svg>
        </div>
    </section>
    <section id="proyectos" class="max-w-4xl mx-auto ">
        <h2 class="text-4xl">Proyectos</h2>
        <Proyectos/>
    </section>
    <section id="tecnologías">
    </section>
    <section id="Sobre_mi">

    </section>
    <section class="contacto">

    </section>
</main>